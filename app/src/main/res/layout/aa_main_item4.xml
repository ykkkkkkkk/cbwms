<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/lin_item1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56dp"
        android:background="@drawable/btn_white_selector"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:layout_width="@dimen/_32dp"
            android:layout_height="@dimen/_32dp"
            android:background="@drawable/aa_ico4a_1" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_20dp"
            android:gravity="center"
            android:text="wifi连接"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0.6dp"
        android:background="@color/c_cccccc" />

    <LinearLayout
        android:id="@+id/lin_item2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56dp"
        android:background="@drawable/btn_white_selector"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/_32dp"
            android:layout_height="@dimen/_32dp"
            android:background="@drawable/aa_ico4a_2" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_20dp"
            android:gravity="center"
            android:text="服务器设置"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0.6dp"
        android:background="@color/c_cccccc" />

    <LinearLayout
        android:id="@+id/lin_item3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56dp"
        android:background="@drawable/btn_white_selector"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/_32dp"
            android:layout_height="@dimen/_32dp"
            android:background="@drawable/aa_ico4a_3" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_20dp"
            android:gravity="center"
            android:text="网络测试"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0.6dp"
        android:background="@color/c_cccccc" />

    <LinearLayout
        android:id="@+id/lin_item4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56dp"
        android:background="@drawable/btn_white_selector"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/_32dp"
            android:layout_height="@dimen/_32dp"
            android:background="@drawable/aa_ico4a_4" />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="更新版本"
                android:layout_marginLeft="@dimen/_32dp"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sp" />

            <TextView
                android:id="@+id/tv_updatePlan"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1%"
                android:visibility="invisible"
                android:textColor="@color/c_009900"
                android:textSize="@dimen/_12sp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0.6dp"
        android:background="@color/c_cccccc" />

    <LinearLayout
        android:id="@+id/lin_item5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56dp"
        android:background="@drawable/btn_white_selector"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/_32dp"
            android:layout_height="@dimen/_32dp"
            android:background="@drawable/aa_ico4a_5" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_20dp"
            android:gravity="center"
            android:text="退出系统"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0.6dp"
        android:background="@color/c_cccccc" />


</LinearLayout>

