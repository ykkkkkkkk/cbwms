<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="216dp"
    android:layout_margin="@dimen/_10dp"
    android:background="@drawable/back_style_blue"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:layout_marginTop="@dimen/_26dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="检验数"
            android:textColor="#000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_num1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_3dp"
            android:layout_weight="1"
            android:background="@drawable/back_style_blue"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textSize="14sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_6dp"
            android:digits="0123456789."
            android:gravity="center"
            android:text="合格数"
            android:textColor="#000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_num2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_3dp"
            android:layout_weight="1"
            android:background="@drawable/back_style_blue"
            android:digits="0123456789."
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:layout_marginTop="@dimen/_20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="不良数"
            android:textColor="#000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_num3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_3dp"
            android:layout_weight="0.8"
            android:background="@drawable/back_style_blue"
            android:digits="0123456789."
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_weight="1"
            android:background="@drawable/btn_purple_selector"
            android:text="提交 (检验中)"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42dp"
        android:layout_margin="@dimen/_20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_close"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_gray1_selector"
            android:text="关闭"
            android:textColor="@color/c_666666" />

        <Button
            android:id="@+id/btn_submit2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_weight="1"
            android:background="@drawable/btn_blue_selector"
            android:text="提交 (已完成)"
            android:textColor="@color/white" />


    </LinearLayout>

</LinearLayout>
