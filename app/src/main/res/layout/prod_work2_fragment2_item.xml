<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_row"
        android:layout_width="32dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="行号"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_mtlPriceType"
        android:layout_width="0dp"
        android:layout_height="@dimen/_46dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="物料类型"
        android:textColor="#000000"
        android:textSize="@dimen/_14sp" />

    <TextView
        android:id="@+id/tv_finishCondition"
        android:layout_width="78dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="完成情况"
        android:textColor="@color/c_666666"
        android:textSize="@dimen/_12sp" />

    <TextView
        android:id="@+id/tv_wrokQty"
        android:layout_width="@dimen/_68dp"
        android:layout_height="@dimen/_46dp"
        android:background="@drawable/back_style_blue2"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="12sp" />

</LinearLayout>
