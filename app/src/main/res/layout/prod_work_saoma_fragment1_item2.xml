<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_row"
        android:layout_width="@dimen/_32dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="行号"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_prodNo"
        android:layout_width="@dimen/_78dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="生产单号"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_mtlName"
        android:layout_width="160dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="物料名称"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_realWorkQty"
        android:layout_width="78dp"
        android:layout_height="@dimen/_46dp"
        android:background="@drawable/back_style_blue2"
        android:gravity="center"
        android:text="报工数"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_prodQty"
        android:layout_width="58dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="生产数"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_prodSeqNumber"
        android:layout_width="88dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="生产序号/条码"
        android:textColor="#000000"
        android:textSize="12sp" />


</LinearLayout>

