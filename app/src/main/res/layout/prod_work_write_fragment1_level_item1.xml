<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_style_gray1e"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_prodNo"
        android:layout_width="0dp"
        android:layout_height="@dimen/_42dp"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:gravity="center|left"
        android:text="单号：MO037801"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_prodDate"
        android:layout_width="@dimen/_78dp"
        android:layout_height="@dimen/_42dp"
        android:layout_marginRight="@dimen/_10dp"
        android:gravity="center"
        android:maxLength="10"
        android:text="2019-07-23"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_expan"
        android:layout_width="@dimen/_28dp"
        android:layout_height="@dimen/_28dp"
        android:layout_marginLeft="@dimen/_2dp"
        android:layout_marginRight="@dimen/_12dp"
        android:gravity="center" />


</LinearLayout>