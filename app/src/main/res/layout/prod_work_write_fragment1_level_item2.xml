<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_row"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_46dp"
        android:layout_marginLeft="@dimen/_20dp"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/c_FF2200"
        android:textSize="@dimen/_16sp" />

    <TextView
        android:id="@+id/tv_mtlName"
        android:layout_width="0dp"
        android:layout_height="@dimen/_46dp"
        android:layout_weight="1"
        android:gravity="center|left"
        android:text="五福金牛脚垫"
        android:textColor="@color/c_515151"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_mtlNum"
        android:layout_width="88dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="100套"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sp" />

    <TextView
        android:id="@+id/tv_expan2"
        android:layout_width="@dimen/_22dp"
        android:layout_height="@dimen/_22dp"
        android:layout_marginLeft="@dimen/_2dp"
        android:layout_marginRight="@dimen/_10dp"
        android:gravity="center" />

</LinearLayout>