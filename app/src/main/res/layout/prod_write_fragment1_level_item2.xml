<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_mtlName"
        android:layout_width="0dp"
        android:layout_height="@dimen/_38dp"
        android:layout_weight="1"
        android:gravity="center|left"
        android:text="五福金牛脚垫"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_mtlNum"
        android:layout_width="@dimen/_68dp"
        android:layout_height="@dimen/_38dp"
        android:gravity="center"
        android:text="1套"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_expan2"
        android:layout_width="@dimen/_22dp"
        android:layout_height="@dimen/_22dp"
        android:layout_marginLeft="@dimen/_2dp"
        android:layout_marginRight="@dimen/_2dp"
        android:gravity="center" />


</LinearLayout>